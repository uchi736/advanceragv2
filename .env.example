# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=your-chat-deployment
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment

# LLM Configuration
LLM_TEMPERATURE=0.0
MAX_TOKENS=4096

# Vector Store Configuration
# Options: pgvector (full features), chromadb (limited features)
# Note: ChromaDB does not support Text-to-SQL and Jargon Dictionary features
VECTOR_STORE_TYPE=pgvector

# PostgreSQL Configuration (required for pgvector)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-password

# ChromaDB Configuration (required for chromadb)
# For local persistent storage
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_JARGON_DIRECTORY=./chroma_jargon_db

# For ChromaDB server (optional)
# CHROMA_SERVER_HOST=localhost
# CHROMA_SERVER_PORT=8000
# CHROMA_SERVER_SSL_ENABLED=false

# Collection Configuration
COLLECTION_NAME=documents

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
VECTOR_SEARCH_K=15
KEYWORD_SEARCH_K=15
FINAL_K=15

# Japanese Search Configuration
ENABLE_JAPANESE_SEARCH=true
JAPANESE_MIN_TOKEN_LENGTH=2

# Full-Text Search Language
FTS_LANGUAGE=english
RRF_K_FOR_FUSION=60

# Text-to-SQL Configuration
MAX_SQL_RESULTS=1000
MAX_SQL_PREVIEW_ROWS_FOR_LLM=20
USER_TABLE_PREFIX=data_

# Jargon and Reranking Configuration
ENABLE_JARGON_EXTRACTION=true
ENABLE_JARGON_AUGMENTATION=true
ENABLE_RERANKING=false
JARGON_TABLE_NAME=jargon_dictionary
MAX_JARGON_TERMS_PER_QUERY=5
ENABLE_DOC_SUMMARIZATION=true
ENABLE_METADATA_ENRICHMENT=true
CONFIDENCE_THRESHOLD=0.2

# Vector Store Settings
DISTANCE_STRATEGY=COSINE

# PDF Processing Configuration - Azure Document Intelligence
SAVE_MARKDOWN=false
MARKDOWN_OUTPUT_DIR=output/markdown

# Azure Document Intelligence Configuration (required)
AZURE_DI_ENDPOINT=https://your-di-resource.cognitiveservices.azure.com/
AZURE_DI_API_KEY=your-di-api-key
# AZURE_DI_MODEL=prebuilt-layout