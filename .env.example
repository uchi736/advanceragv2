# Database configuration
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-password

# Vector Store Configuration (PGVector only)
VECTOR_STORE_TYPE=pgvector

# Azure OpenAI Service Settings
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=your-chat-deployment
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment

PDF_PROCESSOR_TYPE=azure_di
AZURE_DI_ENDPOINT=https://your-di-resource.cognitiveservices.azure.com/
AZURE_DI_API_KEY=your-di-api-key
AZURE_DI_MODEL=prebuilt-layout

# Langsmith トレース設定 (オプション)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=My RAG Project
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Other optional settings
VECTOR_SEARCH_K=10
KEYWORD_SEARCH_K=10
FINAL_K=5
COLLECTION_NAME=documents
CONFIDENCE_THRESHOLD=0.7